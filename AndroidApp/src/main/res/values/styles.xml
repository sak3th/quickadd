<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:textColor">@color/activity_title</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardAddEventText">
        <item name="android:textColor">@color/card_text</item>
        <item name="android:textColorHint">@color/card_text_hint</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
    </style>

    <style name="CardTitleText">
        <item name="android:textColor">@color/card_text</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardBodyText">
        <item name="android:textColor">@color/card_text</item>
        <item name="android:textSize">@dimen/card_body_text_size</item>
    </style>

    <style name="CardListItemText">
        <item name="android:textColor">@color/card_text</item>
        <item name="android:textSize">@dimen/card_list_text_size</item>
    </style>

    <style name="ListDivider">
        <item name="android:background">@color/list_divider</item>
    </style>
</resources>
